<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_cardView"
        app:cardCornerRadius="9dp"
        app:cardElevation="9dp">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/movie_list_poster_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_view_detalhe"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_movie_poster"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/no_image"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/marginTopTextViewAdapter"
            android:layout_gravity="right"
            android:textColor="@color/colorWhite"
            android:background="@drawable/circular_adapter"
            android:id="@+id/text_votacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number" />
    </android.support.v7.widget.CardView>

</LinearLayout>